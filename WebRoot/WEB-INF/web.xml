<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>hlt</display-name>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
	</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.cmbc.edw.web.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ServiceServlet</servlet-name>
    <servlet-class>com.cmbc.edw.web.ServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServiceServlet</servlet-name>
    <url-pattern>/service/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CommandFactoryInitServlet</servlet-name>
    <servlet-class>com.cmbc.edw.web.cmd.CommandFactoryInitServlet</servlet-class>
    <init-param>
      <param-name>cache</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>xmls</param-name>
      <param-value>/WEB-INF/classes/conf/cmdmapping</param-value>
    </init-param>
    <load-on-startup>102</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>ParameterManagerInitServlet</servlet-name>
    <servlet-class>com.cmbc.edw.web.servlet.ParameterManagerInitServlet</servlet-class>
    <init-param>
      <param-name>cache</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>xml</param-name>
      <param-value>/WEB-INF/classes/conf/Parameters.xml</param-value>
    </init-param>
    <load-on-startup>101</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>QueryStringXmlLoaderInitServlet</servlet-name>
    <servlet-class>com.cmbc.edw.dao.xquery.QueryStringXmlLoaderInitServlet</servlet-class>
    <init-param>
      <param-name>cache</param-name>
      <param-value>false</param-value>
    </init-param>
    <init-param>
      <param-name>xmls</param-name>
      <param-value>/WEB-INF/classes/conf/querystring</param-value>
    </init-param>
    <load-on-startup>103</load-on-startup>
  </servlet>
  <error-page>
    <error-code>505</error-code>
    <location>/common/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/common/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/common/404.jsp</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <session-config><session-timeout>-1</session-timeout></session-config>
</web-app>
